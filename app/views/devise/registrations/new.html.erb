<%= render "shared/header" %>
<div class="contents">
  <div class="container">
    <h2><b>＜新規登録＞</b></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :名前 %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "input_area" %>
      </div>

      <div class="field">
        <%= f.label :Eメール %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input_area" %>
      </div>

      <div class="field">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        (<%= @minimum_password_length %>文字以上)
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "input_area" %>
      </div>

      <div class="field">
        <%= f.label :"パスワード(確認用)" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input_area" %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録する", class: "button" %>
      </div>
    <% end %>
  </div>
</div>
